{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "PowerShell Launch Current File",
            "type": "PowerShell",
            "request": "launch",
            "script": "${file}",
            "cwd": "${cwd}",
            "internalConsoleOptions": "openOnSessionStart",
            "windows": {
                "args": ["-NoExit", "-Command", "$DebugPreference='Continue'"]
            }
        }
        {
            "name": "Compile and Run",
            "type": "PowerShell",
            "request": "launch",
            "preLaunchTask": "Compile",
            "script": "${workspaceFolder}/scans.exe",
            "args": []
        }
    ]
}